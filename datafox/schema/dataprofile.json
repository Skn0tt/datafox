{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "DataProfile",
  "type": "object",
  "properties": {
    "identifier": {
      "type": "string",
      "description": "some unique identifier for the dataset"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "columns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        }
      }
    }
  }
}
